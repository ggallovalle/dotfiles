[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": [
      "~"
    ]
  },
  {
    "link": {
      "~/.Xmodmap": {
        "force": true,
        "path": "home/.Xmodmap"
      },
      "~/.config/alacritty": null,
      "~/.config/awesome": null,
      "~/.config/doom": null,
      "~/.config/fish": null,
      "~/.config/fontconfig": {
        "force": true,
        "path": "fontconfig"
      },
      "~/.config/git": {
        "force": true,
        "path": "git"
      },
      "~/.config/ideavim": null,
      "~/.config/kitty": null,
      "~/.config/lf": null,
      "~/.config/maven": null,
      "~/.config/nvim": null,
      "~/.config/picom": null,
      "~/.config/polybar": null,
      "~/.config/rofi": null,
      "~/.config/starship.toml": {
        "force": true,
        "path": "config/starship.toml"
      },
      "~/.config/yay": null,
      "~/.config/zsh": null,
      "~/.default-gems": {
        "force": true,
        "path": "home/.default-gems"
      },
      "~/.default-npm-packages": {
        "force": true,
        "path": "home/.default-npm-packages"
      },
      "~/.tldrrc": {
        "force": true,
        "path": "home/.tldrrc"
      },
      "~/.tmux.conf": {
        "force": true,
        "path": "home/.tmux.conf"
      },
      "~/.tmux.conf.local": {
        "force": true,
        "path": "home/.tmux.conf.local"
      },
      "~/.xmodmaprc": {
        "force": true,
        "path": "home/.Xmodmap"
      },
      "~/.zshenv": {
        "force": true,
        "path": "home/.zshenv"
      }
    }
  },
  {
    "ghqfile": [
      {
        "file": "repos.txt",
        "flags": [
          "--silent"
        ]
      }
    ]
  },
  {
    "asdf": [
      {
        "global": "14.15.1",
        "plugin": "nodejs",
        "url": "https://github.com/ggallovalle/asdf-nodejs",
        "versions": [
          "14.15.1"
        ]
      },
      {
        "global": "7.4.13",
        "plugin": "php",
        "versions": [
          "7.4.13",
          "8.0.0"
        ]
      },
      {
        "global": "3.8.6",
        "plugin": "python",
        "versions": [
          "3.8.6"
        ]
      },
      {
        "global": "2.7.2",
        "plugin": "ruby",
        "versions": [
          "2.7.2"
        ]
      },
      {
        "global": "1.22.4-stable",
        "plugin": "flutter",
        "versions": [
          "1.22.4-stable"
        ]
      }
    ]
  }
]
